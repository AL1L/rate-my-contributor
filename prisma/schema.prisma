generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  role          String         @default("user")
  darkMode      Boolean        @default(false)
  accounts      Account[]
  sessions      Session[]
  ratings       Rating[]
  githubProfile GitHubProfile? @relation(fields: [githubProfileId], references: [id])
  githubProfileId String?      @unique

  @@index([email])
}

model GitHubProfile {
  id            String         @id @default(cuid())
  username      String         @unique
  avatarUrl     String?
  bio           String?
  ratings       Rating[]
  pullRequests  PullRequest[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User?

  @@index([username])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PullRequest {
  id          String        @id @default(cuid())
  title       String
  description String?
  url         String        @unique
  author      GitHubProfile @relation(fields: [authorId], references: [id])
  authorId    String
  commits     Commit[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Commit {
  id            String      @id @default(cuid())
  message       String
  url           String      @unique
  pullRequest   PullRequest @relation(fields: [pullRequestId], references: [id])
  pullRequestId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Rating {
  id              String        @id @default(cuid())
  score           Int
  comment         String?
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  userEmail       String
  githubProfile   GitHubProfile @relation(fields: [githubProfileId], references: [id])
  githubProfileId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([userId, githubProfileId])
  @@index([score])
}

model Notification {
  id              String        @id @default(cuid())
  message         String
  githubProfile   GitHubProfile @relation(fields: [githubProfileId], references: [id])
  githubProfileId String
  createdAt       DateTime      @default(now())
  read            Boolean       @default(false)
}
